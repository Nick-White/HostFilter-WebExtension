{
	"manifest_version": 2,
	"name": "HostFilter-WebExtension",
	"version": "0.1",

	"options_ui": {
		"open_in_tab": true,
		"page": "options/options.html"
	},
	
	"permissions": [
		"<all_urls>",
		"downloads",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],
	
	"background": {
		"scripts": ["main.js"]
	},
	
	"web_accessible_resources": [
		"empty_content/text.txt",
		"empty_content/image.png",
		"logEntries/logEntries.html"
	]
}